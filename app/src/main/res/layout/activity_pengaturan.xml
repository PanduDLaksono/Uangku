<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/red"
    android:paddingStart="5dp"
    android:paddingTop="5dp"
    android:paddingEnd="5dp"
    android:paddingBottom="5dp"
    tools:context=".PengaturanActivity">

    <TextView
        android:id="@+id/txtMenuPengaturan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/pengaturan"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtGantiPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtMenuPengaturan"
        android:layout_marginTop="10dp"
        android:text="@string/ganti_pass"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/txtPassOld"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtGantiPassword"
        android:layout_marginTop="10dp"
        android:text="@string/pass_old"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/inputTxtPassOld"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtPassOld"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="@string/input_pass_old"
        android:inputType="textPassword"
        android:minHeight="50dp" />

    <TextView
        android:id="@+id/txtPassNew"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/inputTxtPassOld"
        android:layout_marginTop="15dp"
        android:text="@string/pass_new"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/inputTxtPassNew"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtPassNew"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="@string/input_pass_new"
        android:inputType="textPassword"
        android:minHeight="50dp" />

    <Button
        android:id="@+id/btnSimpanSetting"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/inputTxtPassNew"
        android:layout_centerInParent="true"
        android:layout_marginTop="50dp"
        android:backgroundTint="@color/green"
        android:text="@string/simpan" />

    <Button
        android:id="@+id/btnKembaliSetting"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnSimpanSetting"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/red"
        android:text="@string/kembali" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnKembaliSetting"
        android:layout_alignParentEnd="false"
        android:layout_alignParentBottom="false"
        android:layout_centerInParent="true"
        android:layout_marginTop="150dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgSettingBiodata"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="10dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerInside"
                    android:src="@drawable/foto_1941723006" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtTentangAplikasi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:text="@string/about_app"
                        android:textColor="@color/black"
                        android:textSize="25sp" />

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/apk_ini_dibuat" />

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/nama_biodata" />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/nim_biodata" />

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/tgl_biodata" />
                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>